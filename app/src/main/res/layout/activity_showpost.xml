<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="right"
            android:fontFamily="@font/mitr"
            android:hint="หัวข้อการแจ้งเหตุ"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="24sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="202dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/original" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="170dp"
                   android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/mitr"
                    android:text="ระดับความรุนแรง"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Violence"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mitr"
                    android:hint="ระดับความรุนแรง"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="170dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/mitr"
                    android:text="ประเภท"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Type"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mitr"
                    android:hint="ประเภทการแจ้งเหตุ"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="170dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/mitr"
                    android:text="รายละเอียด"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detail"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mitr"
                    android:hint="รายละเอียดการแจ้งเหตุ"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="170dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/mitr"
                    android:text="สถานที่ตั้ง"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/maps"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/mitr"
                    android:hint="แสดงที่ตั้ง"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
